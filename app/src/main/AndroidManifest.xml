<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.trabajo1.appciberelectrik">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icono_final"
        android:label="CIBERELECTRIK"
        android:roundIcon="@mipmap/ic_icono_final"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCiberElectrik">

        <activity
            android:name=".act.ActividadInicio"
            android:excludeFromRecents="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".act.ActividadMenu"
            android:exported="true"
            android:label="CIBERELECTRIK"
            android:theme="@style/Theme.AppCiberElectrik.NoActionBar"></activity>
    </application>

</manifest>